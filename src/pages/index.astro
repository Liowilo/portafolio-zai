---
import Loader from '../components/Loader';
import SmoothScroll from '../components/SmoothScroll';
import Navigation from '../components/Navigation';
import Hero from '../components/Hero';
import ProjectsGrid from '../components/ProjectsGrid';
import About from '../components/About';
import Contact from '../components/Contact';
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Bernardo Rodríguez - Diseñador Gráfico & Creativo. Especializado en branding, animación digital y motion graphics." />
		<title>Bernardo Rodríguez - Diseñador Gráfico & Creativo</title>
	</head>
	<body class="overflow-x-hidden">
		<SmoothScroll client:load />
		<Loader client:load />
		<Navigation client:load />
		<Hero client:load />
		<ProjectsGrid client:load />
		<About client:load />
		<Contact client:load />

		<!-- Footer -->
		<footer class="bg-black border-t border-gray-900 py-12">
			<div class="max-w-7xl mx-auto px-6">
				<div class="text-center text-gray-400">
					<p>&copy; 2025 Bernardo Rodríguez. Todos los derechos reservados.</p>
					<p class="mt-2 text-sm">Diseñado con pasión y creatividad</p>
				</div>
			</div>
		</footer>
	</body>
</html>
